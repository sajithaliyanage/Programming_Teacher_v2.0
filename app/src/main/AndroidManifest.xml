<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pushpika.canvas_game">
    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AnimationActivity"
                  android:screenOrientation="portrait" />
        <activity android:name=".AnimationActivity2"
                  android:screenOrientation="portrait"/>
        <activity android:name=".Question_view"
                  android:screenOrientation="portrait" />
        <activity
            android:name=".database_data_entry_initial"
            android:label="@string/title_activity_database_data_entry_initial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".NewQuestionView"
                  android:screenOrientation="portrait"/>
        <activity android:name=".AboutActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ExampleActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".HelpActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".WinActivity"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>